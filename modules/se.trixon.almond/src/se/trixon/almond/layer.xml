<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.2//EN" "http://www.netbeans.org/dtds/filesystem-1_2.dtd">
<filesystem>
    <folder name="Actions">
        <folder name="View">
            <file name="se-trixon-almond-StayOnTopAction.instance">
                <attr name="preferencesNode" methodvalue="se.trixon.almond.AlmondOptions.getPreferences" />
                <attr name="preferencesKey" stringvalue="alwaysOnTop"/>
                <attr name="instanceCreate" methodvalue="org.openide.awt.Actions.checkbox"/>
                <attr name="displayName" bundlevalue="se.trixon.almond.Bundle#CTL_AlwaysOnTopAction"/>
                <attr name="noIconInMenu" boolvalue="true"/>
            </file>
        </folder>
        <folder name="Help">
            <file name="org-netbeans-core-actions-AboutAction.instance">
                <attr name="displayName" bundlevalue="org.netbeans.core.actions.Bundle#About"/>
                <attr name="delegate" newvalue="se.trixon.almond.about.AboutAction"/>
                <attr name="instanceCreate" methodvalue="org.openide.awt.Actions.alwaysEnabled"/>
                <attr name="noIconInMenu" boolvalue="false"/>
                <attr name="iconBase" stringvalue="org/netbeans/core/startup/frame.png"/>
            </file>
        </folder>
    </folder>
    <folder name="Menu">
        <folder name="View">
            <file name="se-trixon-almond-StayOnTopAction.shadow">
                <attr name="originalFile" stringvalue="Actions/View/se-trixon-almond-StayOnTopAction.instance"/>
                <attr name="position" intvalue="9999"/>
            </file>
        </folder>
    </folder>
    <folder name="Shortcuts">
        <file name="F11.shadow">
            <attr name="originalFile" stringvalue="Actions/Window/org-netbeans-core-windows-actions-ToggleFullScreenAction.instance"/>
        </file>
        <file name="OS-ENTER.shadow_hidden"/>
    </folder>
</filesystem>
